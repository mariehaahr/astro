---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
// import description from '../../components/description.astro';

const posts = (await getCollection('3-sem')).sort(
	(a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
        <style>
			main {
				width: 960px;
				padding-top: 100px;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
				
			}
			ul li {
				width: calc(100% - 20px);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
				
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
				
			}
			ul li a {
				display: block;
			
			}
			.title-box {
				background-color: #f2f2f2;
				padding: 1rem;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
			}
}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 1200px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
					
				}
			}
		</style>

	</head>
	<body>
		<Header />
		<main>
			<!-- <h4 class="title-main">3rd Semester</h4> -->
			<section>
				<ul>
					<li>
						<a href='../machine-learning/'>
                            <div class="title-box">
							{/* <img width={720} height={160} src='/examprep.jpg'/> */}
							    <h4 class="title">Machine Learning</h4>
                            </div>
						</a>
                        <br> 
                        <a href='../network-analysis/'>
							<div class="title-box">
                                {/* <img width={720} height={160} src='/examprep.jpg'/>*/}
							    <h4 class="title">Network Analysis</h4>
                            </div>
                            </a>
                        <br> 
                        <a href='https://leeward-loaf-a08.notion.site/2c0c4b490fdc491d820b078ec351a70e?v=83bdf7cf5492466d8ea9a5eb1a0c57a8&pvs=4'>
							<div class="title-box">
                                {/* <img width={720} height={160} src='/examprep.jpg'/>*/}
						
                                <h4 class="title">Introduction to Database Systems</h4>
                                <h>Link to my notion</h>
                            </div>
						</a>
					</li>

				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
